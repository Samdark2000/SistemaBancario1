@model IEnumerable<Techh_Onvi.Models.Trasanction>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beneficiario)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.BankName)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.SWIFTCode)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th><a onclick="showInPopup('@Url.Action("AddOrEdit","Trasanctions", null, Context.Request.Scheme)','Nueva Transaccion')" class="btn btn-success text-white"><i class="fas fa-random"></i>Nueva Transaccion</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beneficiario)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.BankName)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.SWIFTCode)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
            <a onclick="showInPopup('@Url.Action("AddOrEdit","Trasanctions", new { id = item.TransactionId}, Context.Request.Scheme)','Actualizar Transaccion')" class="btn btn-success text-white"><i class="fas fa-random"></i>Editar</a>

            <form asp-action="Delete" asp-route-id="@item.TransactionId" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                <input type="submit" value="Borrar" class="btn btn-danger" />
            </form>
            </td>
        </tr>
        }
    </tbody>
</table>