@model IEnumerable<BankManagement.Models.Tarjeta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero_Tarjeta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Tarjetas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CVV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_Tarjeta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Tarjetas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CVV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TarjetaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TarjetaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TarjetaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
