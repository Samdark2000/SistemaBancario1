@model TechOnvi_Cliente.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar tu solicitud</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    <input asp-for="Solicitud" type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                    <label asp-for="Solicitud" class="custom-file-label" for="inputGroupFile01">
                        Elija el archivo
                    </label>
                    <span asp-validation-for="Solicitud" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>
<div>
    ==
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
